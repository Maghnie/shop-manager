# =============================================================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control!
#
# Usage: cp .env.example .env
# =============================================================================

# -----------------------------------------------------------------------------
# PostgreSQL Database Configuration
# -----------------------------------------------------------------------------
POSTGRES_DB=shop_db
POSTGRES_USER=your_db_user
POSTGRES_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgresql://your_db_user:your_secure_password_here@db:5432/shop_db

# -----------------------------------------------------------------------------
# Port Configuration (for Docker)
# -----------------------------------------------------------------------------
# Change these if you have services already running on these ports locally
# Standard alternatives are suggested for each service

# Backend (Django Development Server)
# Default: 8000 | Standard alternatives: 8001, 8080, 8888, 9000
BACKEND_PORT=8000

# PostgreSQL Database
# Default: 5432 | Standard alternatives: 5433, 5434, 54320
POSTGRES_PORT=5432

# -----------------------------------------------------------------------------
# Django Configuration
# -----------------------------------------------------------------------------
# Generate a secret key with: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
# IMPORTANT: Use single quotes to prevent Docker Compose from interpreting $ characters as variables
DJANGO_SECRET_KEY='your-secret-key-here-generate-a-random-one-for-production'

# Set to False in production!
DEBUG=True

# Comma-separated list of allowed hosts (required when DEBUG=False)
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# Django Superuser (Optional - for automatic creation in development)
# -----------------------------------------------------------------------------
# Leave blank in production for security
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@example.com
DJANGO_SUPERUSER_PASSWORD=changeme

# -----------------------------------------------------------------------------
# Analytics Configuration
# -----------------------------------------------------------------------------
ANALYTICS_CACHE_ENABLED=True
ANALYTICS_DEBUG=True

# -----------------------------------------------------------------------------
# Export Settings
# -----------------------------------------------------------------------------
ANALYTICS_EXPORT_PATH=/tmp/analytics_exports/
ANALYTICS_MAX_EXPORT_SIZE=50MB

# -----------------------------------------------------------------------------
# Performance Settings
# -----------------------------------------------------------------------------
ANALYTICS_QUERY_TIMEOUT=30
ANALYTICS_CACHE_TIMEOUT=3600
